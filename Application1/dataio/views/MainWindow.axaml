<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Application1.dataio.views.MainWindow"
        Title="Application1">
        <Grid ColumnDefinitions="1*, 1*" RowDefinitions="Auto" Margin="5">
                <StackPanel Spacing="10" Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="{Binding ClientId}"/>
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                                <TextBox Watermark="Input for Application2" Grid.Row="0" Grid.Column="0"/>
                                <Button Content="Send" Grid.Row="0" Grid.Column="1"/>
                        </Grid>
                        <StackPanel Spacing="10">
                                <TextBlock Text="Inputs send:"/>
                                <ListBox />
                        </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="10">
                        <TextBlock Text="Outputs Received:"/>
                        <ListBox />
                </StackPanel>
        </Grid>
</Window>
